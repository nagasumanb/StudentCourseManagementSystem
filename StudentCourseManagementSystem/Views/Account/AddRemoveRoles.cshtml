@model List<StudentCourseManagement.Entity.Models.ViewModels.UserRoleViewModel>

@{
    ViewData["Title"] = "AddRemoveRoles";
}

<h1>AddRemoveRoles</h1>
<h3>@ViewBag.UserName</h3>
<p>
    <a asp-action="CreateRoles">Create New</a>
</p>
<form asp-action="AddRemoveRoles" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().RoleId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().RoleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().IsSelected)
                </th>

            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <input type="hidden" asp-for="@Model[i].RoleId" />
                <input type="hidden" asp-for="@Model[i].RoleName" />
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].RoleId)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].RoleName)
                    </td>
                    <td>
                        <input type="checkbox" asp-for="@Model[i].IsSelected" class="form-check-input" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="AddOrRemoveRole" />
</form>