@model StudentCourseManagement.Entity.Models.Entity.StudentCourses

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>StudentCourses</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <p>Student: @Model.Student?.StudentName</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class = "col-sm-10">
            <p>Course: @Model.Course?.CourseName</p>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HasCompleted)
        </dt>
        <dd class = "col-sm-10">
            <p>Has Completed: @(Model.HasCompleted ? "Yes" : "No")</p>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
