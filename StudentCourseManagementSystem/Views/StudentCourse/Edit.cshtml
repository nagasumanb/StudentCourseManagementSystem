                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasCompleted" /> @Html.DisplayNameFor(model => model.HasCompleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

